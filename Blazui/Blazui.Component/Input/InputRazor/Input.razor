@using Blazui.Component.Input.Category
@{
    <el-input type="@getType()"></el-input>
}
@functions{
    [Parameter]
    public InputType type { get ; set; }

    public string getType()
    {
        string result = string.Empty;
        switch (type)
        {
            case InputType.button:
                result= "button";break;
            case InputType.text:
                result= "text";break;
            case InputType.textarea:
                result= "textarea";break;
            case InputType.checkbox:
                result= "checkbox";break;
            case InputType.color:
                result= "color";break;
            default:
                result= "text";break;
        }
        return result;
    }

}