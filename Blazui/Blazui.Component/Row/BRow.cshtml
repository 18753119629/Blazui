@using System.Threading.Tasks;

<@Tag class="@TagClass" style="@TagStyle"></@Tag>

@functions{
    private string TagClass;
    private string TagStyle;
    [Parameter]
    string Tag { get; set; } = "div";
    [Parameter]
    int? Gutter { get; set; }
    [Parameter]
    string Type { get; set; }
    [Parameter]
    string Justify { get; set; } = "start";
    [Parameter]
    string Align { get; set; } = "top";

    public string GetStyle()
    {
        if (Gutter != null)
        {
            var marginLeft = Gutter / 2;
            return $"margin-left: -{marginLeft}px; margin-right: -{marginLeft}px;";
        }
        return string.Empty;
    }

    protected override async Task OnInitAsync()
    {
        TagStyle = GetStyle();

        TagClass = $"el-row {(Justify != "start" ? $"is-justify-${Justify}" : "")} {(Align != "top" ? $"is -align -${Align}" : "")} {(Type == "flex" ? "el-row--flex" : "")}";

        await Task.CompletedTask;
    }
}