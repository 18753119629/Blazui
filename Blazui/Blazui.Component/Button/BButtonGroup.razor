<div class="layui-btn-container">
    @ChildContent
</div>

@functions{

    private RenderFragment c;
    [Parameter]
    private RenderFragment ChildContent
    {
        get
        {
            return c;
        }
        set
        {
            c = value;
            Console.WriteLine(c.Method.DeclaringType.Assembly.CodeBase);
        }
    }

    protected async Task OnParametersSetAsync()
    {
        await Task.CompletedTask;
    }
}